<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:startColor="#AE929292" android:centerColor="#AE929292" android:endColor="#AE929292"></gradient>
            <corners android:radius="20dp"></corners>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:startColor="@color/white" android:endColor="@color/white" android:centerColor="@color/white"></gradient>
            <corners android:radius="20dp"></corners>
        </shape>
    </item>
</selector>